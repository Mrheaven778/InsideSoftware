---
import Layout from "../../layouts/Layout.astro";
---

<Layout title="Welcome to Slam Stats">
  <main class="min-h-screen flex items-center justify-center">
    <section class="bg-slate-700 p-8 rounded-lg shadow-md w-full max-w-md">
      <h2 class="text-3xl font-bold mb-8 text-center text-meteor-400">
        Contact Us
      </h2>
      <form action="" class="space-y-4">
        <div>
          <label for="name" class="block text-sm font-medium">Name</label>
          <input
            type="text"
            id="name"
            name="name"
            placeholder="John Doe"
            class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300"
          />
        </div>
        <div>
          <label for="email" class="block text-sm font-medium">Email</label>
          <input
            type="email"
            id="email"
            name="email"
            placeholder="john@example.com"
            class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300"
          />
        </div>
        <div>
          <label for="subject" class="block text-sm font-medium">Subject</label>
          <input
            type="text"
            id="subject"
            name="subject"
            placeholder="Your Subject"
            class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300"
          />
        </div>
        <div>
          <label for="message" class="block text-sm font-medium">Message</label>
          <textarea
            id="message"
            name="message"
            rows="4"
            placeholder="Your message here"
            class="mt-1 p-2 w-full border rounded-md focus:outline-none focus:ring focus:border-blue-300"
          ></textarea>
        </div>
        <button
          type="submit"
          class="bg-meteor-500 text-white py-2 px-4 rounded-full hover:bg-meteor-600 focus:outline-none focus:ring focus:border-meteor-300 w-full"
          >Send</button
        >
      </form>
    </section>
  </main>
</Layout>
